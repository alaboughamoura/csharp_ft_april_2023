@{
    ViewData["Title"] = "Privacy Policy";
}
@model List<Song>
<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <tr>
        <th>Song ID</th>
        <th>Title</th>
        <th>Artist</th>
        <th>Year</th>
        <th>Genre</th>
        <th>Created At</th>
        <th>Updated At</th>
        <th>Actions</th>
    </tr>
    @foreach (Song song in Model)
    {
        <tr>
            <td>@song.SongId</td>
            <td>@song.Title</td>
            <td>@song.Artist</td>
            <td>@song.Year</td>
            <td>@song.Genre</td>
            <td>@song.CreatedAt</td>
            <td>@song.UpdatedAt</td>
            <td>
                <a href="/songs/@song.SongId/edit" class="btn btn-warning">Edit</a>
                @* <a href="" class="btn btn-danger">Delete</a> *@
                <form asp-action="DeleteSong" asp-controller="Home" asp-route-SongId="@song.SongId" method="post">
                    <input type="submit" value="Delete" class="btn btn-danger" >
                </form>
            </td>
        </tr>
    }
</table>